# EMA Crossover Alert Bot Environment Variables
# Copy this file to .env and fill in your actual values

# iOS Shortcuts Configuration
IOS_WEBHOOK_URL=https://your-ios-shortcuts-webhook-url.com

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Alpha Vantage API Configuration (Free tier available)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Flask Configuration
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Bot Configuration
ANALYSIS_INTERVAL_MINUTES=15
KEEP_ALIVE_INTERVAL_MINUTES=1

